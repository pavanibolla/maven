pipeline {
    agent {
        label "master"
    }
    tools {
        maven 'maven'
    }
    stages {
       stage('envsetup') {
           steps {
              echo " mvn path setup "
           }
       }    
       stage('Build') {
          steps {
              echo "building the code"
              sh 'cd $workspace/helloworld'
              sh 'mvn compile'
          }
       }
       stage('Test') {
          steps {
            echo "mvn test"
            
          }
       }
       stage('Deploy') {
          steps {
            echo "mvn -f helloworld/pom.xml install"
          }
       }
    }
}
